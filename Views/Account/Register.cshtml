@model RegisterViewModel
@{
    ViewBag.Title = "User Registration";
}
<form method="post" class="my-2 py-2 px-2">
    <div class="form-group my-3" >
        <label asp-for="Email" ></label>
        <input asp-for="Email" class="form-control my-1" placeholder="Enter email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group my-3">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control my-1" placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group my-3">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control my-1" placeholder="Password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary my-3">Submit</button>
</form>