@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}
<h3>Edit Role</h3>
<form method="post" class="my-2 py-2 px-2">
    <div class="form-group my-3">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" class="form-control my-2" placeholder="Enter Role" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div class="form-group my-3">
        <label asp-for="Id"></label>
        <input asp-for="Id" disabled class="form-control my-2" placeholder="Role Id" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit" class="btn btn-primary my-2">Update</button>
    <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-primary my-2">Cancel</a>
    <div class="card">
        <div class="card-header">
            Users
        </div>
        <div class="card-body">
            @foreach(var user in Model.Users)
            {
                <h5 class="card-title">@user</h5>
            }
        </div>
    </div>

</form>
