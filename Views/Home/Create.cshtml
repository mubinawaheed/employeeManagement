@model Employee

@{

	ViewBag.Title = "Add Employee";
}
<form asp-action="Create" asp-controller="Home" method="post" class="my-2">
	<div class="form-group row my-2" >

		<label class="col-sm-2 col-form-label" asp-for="Name"></label>
		<div class="col-sm-10">
			<input class="form-control w-50" asp-for="Name" />
			@* <span class="text-danger" asp-validation-for="Name"></span> *@
		</div>
	</div>

	<div class="form-group row my-2">
		<label class="col-sm-2 col-form-label" asp-for="Email"></label>
		<div class="col-sm-10">
			<input type="email" class="form-control w-50" asp-for="Email"  />
			@* <span class="text-danger" asp-validation-for="Email"></span> *@

		</div>
	</div>

	<div class="form-group row my-2">
		<label class="col-sm-2 col-form-label" asp-for="Department"></label>
		<select class="custom-select w-50" asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()">
		</select>
		<span class="text-danger" asp-validation-for="Department"></span>

	</div>
	<div asp-validation-summary="All" class="text-danger">

	</div>
	<div>
		<button class="btn btn-primary my-2" type="submit">Submit</button>
	</div>

</form>